{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": "../..",
    "paths": {
      "@/*": ["apps/server/src/*"]
    }
  },
  "include": ["src/**/*", "../client/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
